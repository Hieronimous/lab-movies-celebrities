<div class="container">

    <h2>The Movie collection</h2>
    <hr class="mb-3">



    <div class="row">
        {{#each movies}}
        <div class=" card col-3">

            <div>
                <img class="card-img-top " src="{{image}}" alt="Card image cap">
            </div>

            <div class="card-body">
                <h5 class="card-title"><strong>{{title}}</strong> </h5>
                <a href="/movies/{{id}}/edit" class="btn btn-sm btn-danger">Edit</a>
                <a href="/movies/{{id}}/details" class="btn btn-sm btn-primary">Details</a>

                <form action="/movies/{{id}}/delete" method="POST" style="display: inline">
                    <button type="submit" class="btn btn-sm btn-dark"
                        onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                </form>

            </div>

        </div>
        {{/each}}
    </div>




    <hr>
</div>